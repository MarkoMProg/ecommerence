# Database 
DATABASE_URL=postgresql://user:password@localhost:5432/tshirtshop

# Server ─
PORT=3000
UI_URL=http://localhost:3001
NODE_ENV=development

# Better Auth 
# Better Auth uses BETTER_AUTH_SECRET for signing cookies/tokens.
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
BETTER_AUTH_SECRET=your-better-auth-secret-change-me

# Resend (email) 
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=TShirtShop <noreply@yourdomain.com>

# Google reCAPTCHA ─
RECAPTCHA_SECRET_KEY=your-google-recaptcha-secret-key
NEXT_PUBLIC_RECAPTCHA_SITEKEY=your-google-recaptcha-site-key

# OAuth — Google 
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth — Facebook 
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
